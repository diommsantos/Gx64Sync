{
    "tasks": [
        {
            "label": "Check Target Path Value",
            "type": "shell",
            "command": "echo ${config:TargetPath}",
            "problemMatcher": []
        },
        {
            "label": "Make Out Path dir",
            "type": "shell",
            "command": "if NOT exist \"${config:OutPath}\" (mkdir \"${config:OutPath}\")",
            "problemMatcher": []
        },
        {
            "label": "Unload x64Dbg Plugin",
            "type": "shell",
            "command": "if exist \"${workspaceFolder}\\PluginDevBuildTool.exe\" (\"${workspaceFolder}\\PluginDevBuildTool.exe\" unload \"${config:TargetPath}\")",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "Build x64Dbg Debuggable Plugin",
            "command": "cl.exe",
            "args": [
                "-I", 
                "${workspaceFolder}/asio-1.30.2/include",
                "${workspaceFolder}/Client.cpp",
                "${workspaceFolder}/SyncHandler.cpp",
                "${workspaceFolder}/Messages.cpp",
                "${workspaceFolder}/plugin.cpp",
                "${workspaceFolder}/pluginmain.cpp",
                "/Zi",
                "/EHsc",
                "/nologo",                
                "/Fe${config:TargetPath}",
                "${file}",
                "/std:c++latest",
                "-D_WIN32_WINNT=0x0601",
                "/link", "/DLL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds a .dp64 plugin for x64Dbg"
        },
        {
            "label": "Build and Load x64Dbg Debuggable Plugin",
            "dependsOn":["Make Out Path dir", "Unload x64Dbg Plugin", "Build x64Dbg Debuggable Plugin"],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "if exist \"${workspaceFolder}\\PluginDevBuildTool.exe\" (\"${workspaceFolder}\\PluginDevBuildTool.exe\" reload \"${config:TargetPath}\")",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "Build Test",
            "command": "cl.exe",
            "args": [
                "-I", 
                "${workspaceFolder}/asio-1.30.2/include",
                "${workspaceFolder}/Client.cpp",
                "${workspaceFolder}/SyncHandler.cpp",
                "${workspaceFolder}/Messages.cpp",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/std:c++latest",
                "-D_WIN32_WINNT=0x0601"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}